<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <artifactId>director-linux-installer</artifactId>
    <packaging>pom</packaging>
    <name>director-linux-installer</name>
    <description></description>
    
    <parent>
        <groupId>com.intel.mtwilson.director</groupId>
        <artifactId>director-maven-package-makeself</artifactId>
        <version>0.1-SNAPSHOT</version>
        <relativePath/>
    </parent>
    
    <properties>
        <makeself.director>${project.build.directory}/${project.artifactId}-${project.version}</makeself.director>
    </properties>
    
    <build>
        <resources>
            <resource>
                <directory>src/files</directory>
            </resource>
        </resources>
    </build>
    
    <profiles>
        <profile>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
          
            <!-- these dependencies are only for including the api client, they are not needed for the core shell script functions. the maven-dependency-plugin copies these dependencies and all their dependencies into a folder for distribution -->
            <dependencies>
                <!-- Monit -->
                <!--
                <dependency>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>monit</artifactId>
                    <version>5.5</version>
                    <type>bin</type>
                </dependency>
                -->
                
                <!-- Logrotate -->
                <!--
                <dependency>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>logrotate</artifactId>
                    <version>1.0</version>
                    <type>bin</type>
                </dependency>
                -->
    
                <!-- Linux Utils -->
                <dependency>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>mtwilson-linux-util</artifactId>
                    <version>3.0-SNAPSHOT</version>
                    <type>bin</type>
                </dependency>    
                <dependency>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>mtwilson-linux-util</artifactId>
                    <version>3.0-SNAPSHOT</version>
                    <type>sh</type>
                </dependency>
                <dependency>
                    <groupId>com.intel.mtwilson.director</groupId>
                    <artifactId>director-javafx</artifactId>
                    <version>${project.version}</version>
                    <type>jar</type>
                </dependency>
            </dependencies>
           
            <build>
                <plugins>
                    <!-- begin copy artifacts plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>copy-basic-artifacts</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.linux</groupId>
                                            <artifactId>mtwilson-linux-util</artifactId>
                                            <version>3.0-SNAPSHOT</version>
                                            <type>sh</type>
                                            <destFileName>functions</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.director</groupId>
                                            <artifactId>director-javafx</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                        </artifactItem>
                                        <!--
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.linux</groupId>
                                            <artifactId>logrotate</artifactId>
                                            <version>1.0</version>
                                            <type>bin</type>
                                        </artifactItem>
                                        -->
                                    </artifactItems>
                                    <outputDirectory>${makeself.director}</outputDirectory>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>	
                    <!-- end copy artifacts plugin -->

                    <!-- begin copy other resources plugin -->
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.5</version>
                        <executions>
                            <execution>
                                <id>copy-resources-director</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.director}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/files</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                        </executions>
                    </plugin>
                    <!-- end copy other resources plugin -->

                    <!-- begin create self-extracting installer plugin -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>create-single-installer-director</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <arguments>
                                        <argument>makebin-auto.sh</argument>
                                        <argument>${makeself.director}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- end create self-extracting installer plugin -->
                    <!-- begin deploy installers to repository -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                    </plugin>
                    <!-- end deploy installers to repository -->
      
                    <!-- also defined in top level pom.xml but appears to not take effect if someone runs just this pom -->      
                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                        <version>2.1.4</version>
                        <executions>
                            <execution>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>revision</goal>
                                </goals>
                                <inherited>true</inherited>
                                <configuration>
                                    <prefix>git</prefix>
                                    <dateFormat>EEE, d MMM yyyy HH:mm:ss z</dateFormat>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
      
                </plugins>

                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>build-helper-maven-plugin</artifactId>
                            <version>1.5</version>
                            <executions>                      
                                <execution>
                                    <id>attach-artifacts</id>
                                    <phase>package</phase>
                                    <goals>
                                        <goal>attach-artifact</goal>
                                    </goals>
                                    <configuration>
                                        <artifacts>
                                            <artifact>
                                                <file>${makeself.director}.bin</file>
                                                <type>bin</type>
                                                <classifier>director</classifier>
                                            </artifact>
                                        </artifacts>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
  
  
            </build>
        </profile>
    </profiles>

</project>
